<%- include("partials/header") -%>
<h1>Home</h1>
<p><%=hsc%></p>
<% posts.forEach(function(post){ %>
    <h1><%=post.title%></h1>
    <%if (post.body.length>100){%>
    <p><%=post.body.substring(0,100)+"..."%> <a href="/post/<%=post.title%>">Read more</a> </p>
    <%}else{%>
        <p><%=post.body%> <a href="/post/<%=post.title%>">Read more</a> </p>
    <%}%>
    
<% } )%>
<form action="/compose">
    <input class="btn btn-primary" type="submit" value="New Entry" />
</form>
<%- include("partials/footer") -%>
